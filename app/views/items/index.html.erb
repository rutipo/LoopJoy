<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Desc</th>
    <th>Options</th>
    <th>Display text</th>
    <th>Price</th>
    <th>Sku</th>
    <th>Picture</th>
    <th>Developer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.type %></td>
    <td><%= item.desc %></td>
    <td><%= item.options %></td>
    <td><%= item.display_text %></td>
    <td><%= item.price %></td>
    <td><%= item.sku %></td>
    <td><%= item.developer %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

