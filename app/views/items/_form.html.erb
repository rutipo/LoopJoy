<%= simple_form_for @item do |f| %>
  <%= f.input :name %>
  <%= f.input :desc %>
  <%= f.input :options %>
  <%= f.input :display_text %>
  <%= f.input :price %>
  <%= f.input :sku %>
  <%= f.association :developer, label_method: :merchant_name%>
  <%= f.input :image, as: :file %>

  <%= f.button :submit %>
<% end %>
