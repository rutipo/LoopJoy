<%= simple_form_for @item do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :type %>
    <%= f.input :desc %>
    <%= f.input :options %>
    <%= f.input :price %>
    <%= f.input :sku %>
    <%= f.input :display_text %>
    <%= f.input :image, :as => :file %>
    <%= f.association :developer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>