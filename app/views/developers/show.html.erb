<%- model_class = Developer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @developer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @developer.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apiKey) %>:</strong></dt>
  <dd><%= @developer.apiKey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paypal_email) %>:</strong></dt>
  <dd><%= @developer.paypal_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:merchant_name) %>:</strong></dt>
  <dd><%= @developer.merchant_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              developers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_developer_path(@developer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              developer_path(@developer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
